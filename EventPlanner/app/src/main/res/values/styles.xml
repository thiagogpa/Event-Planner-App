<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- GENERAL USE -->
    <style name="mainTitleTextView">
        <item name="android:textColor">#86AD33</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>


    <!-- EVENT -->
    <style name="eventImageButton">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_width">@dimen/event_imagebutton_width</item>
        <item name="android:layout_height">@dimen/event_imagebutton_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="eventsTextView">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- GUESTS -->


    <style name="subTitleGuestsTextView">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="subTotalGuestsTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subTotalNumberGuestsTextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- GUESTS -->



    <!-- FOODS -->
    <style name="currencyTextEdit">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!-- GENERAL USE -->
    <style name="summaryItemTitle">
        <item name="android:textColor">#86AD33</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="summaryTableTitle">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_white</item>

    </style>


    <style name="summaryItemTextView">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
